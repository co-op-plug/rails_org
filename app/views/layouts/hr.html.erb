<!DOCTYPE html>
<html>
  <head>
    <title>Backend</title>
    <%= stylesheet_link_tag 'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'rails_notice/cable' %>
    <%= css_load media: 'all' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
    <%= js_ready 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
  </head>
  <body>

    <%= render 'nav_bar' %>
    <%= render 'shared/alert' %>

    <main class="ui side">
      <div class="sidebar">
        <% if content_for?(:nav) %>
          <%= yield :nav %>
        <% else %>
          <%= render 'nav' %>
        <% end %>
      </div>
      <div class="content">
        <%= yield %>
      </div>
    </main>

    <%= render 'layouts/footer' %>
    
    <%= js_load %>
    <%= javascript_include_tag 'footer' %>
  </body>
</html>

