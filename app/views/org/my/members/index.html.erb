<div class="ui three cards">
  <% @members.each do |member| %>
  <div class="card">
    <div class="content">
      <div>
        <i class="fas fa-user"></i>
        <span class="ui grey text"><%= member.name %></span>
        <span class="ui green text"><%= member.identity %></span>
        <%= link_to edit_my_member_path(member), data: { tooltip: t('.edit') }, remote: true do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
      </div>
    </div>
    <div class="extra content">
      <p>
        <span><%= member.organ.address %></span>
        <%= link_to member.organ.name, login_my_member_path(member), method: :patch, class: 'ui mini button' %>
        <span><%= member.departments.first&.full_name %></span>
        <%= image_tag member.organ.logo.variant(resize_to_limit: [150, 150]), class: 'right floated mini ui image' %>
      </p>
    </div>
  </div>
  <% end %>
  <div class="card">
    <div class="content">
      <%= link_to new_my_organ_path, data: { tooltip: t('org.my.organs.new.title') }, remote: true do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
</div>
