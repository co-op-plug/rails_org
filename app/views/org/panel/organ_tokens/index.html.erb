<div class="ui top attached borderless menu">
  <div class="header item">Org Admin Organ Tokens</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Org Admin Organ Token', new_panel_organ_token_path, class: 'ui teal button', remote: true %>
    </div>
  </div>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= OrganToken.human_attribute_name(:id) %></th>
      <th><%= OrganToken.human_attribute_name(:user) %></th>
      <th><%= OrganToken.human_attribute_name(:member) %></th>
      <th><%= OrganToken.human_attribute_name(:token) %></th>
      <th><%= OrganToken.human_attribute_name(:expired_at) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @organ_tokens.each do |organ_token| %>
    <tr>
      <td><%= organ_token.id %></td>
      <td><%= link_to organ_token.user.name, admin_user_path(organ_token.user_id) if organ_token.user %></td>
      <td>
        <%= link_to organ_token.member.name, panel_member_path(organ_token.member_id) if organ_token.member %>
      </td>
      <td><%= organ_token.token %></td>
      <td>
        <time><%= organ_token.expired_at.to_s(:rfc822) %></time>
      </td>
      <td class="ui labels">
        <%= link_to panel_organ_token_path(@organ, organ_token), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @organ_tokens %>
