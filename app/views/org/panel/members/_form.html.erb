<%= f.text_field :name %>
<%= f.text_field :identity %>
<%= f.select :type, options_for_select(Member.options_i18n(:type), @member.type), { prompt: true } %>
<%= f.fields :member_departments do |ef| %>
  <%= ef.collection_select :office_id, Office.default_where(default_params), :id, :name, { prompt: true } %>
  <%= render partial: 'nodes/outer_select', locals: { f: ef, outer: 'department' } %>
  <%= ef.select :job_title_id, options_for_select([[ef.object.job_title&.name, ef.object.job_title_id]], ef.object.job_title_id), { on: { wrapper_input_id: true } }, { data: { title: 'job_title_id' } } %>
<% end %>
<%= f.date_field :join_on %>
<%= f.file_field :resume %>
<%= f.check_box :enabled %>
<%= f.submit %>
