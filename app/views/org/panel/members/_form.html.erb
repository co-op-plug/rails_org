<%= f.text_field :name %>
<%= f.fields :member_departments do |ef| %>
  <%= ef.hidden_field :department_id %>
  <%= ef.collection_select :organ_id, current_organ.self_and_descendants, :id, :name, { prompt: true }, { data: { title: 'organ_id' } } %>
  <%= ef.collection_select :job_title_id, @job_titles, :id, :name, { on: { wrapper_input_id: true } }, { data: { title: 'job_title_id' } } %>
<% end %>
<%= f.text_field :identity %>
<%= f.date_field :join_on %>
<%= f.file_field :resume %>
<%= f.file_field :avatar %>
<%= f.check_box :enabled %>
<%= f.submit %>
