<% content_for :breadcrumb do %>
  <%= render 'breadcrumb' %>
<% end %>

<div class="ui attached segment" style="flex-direction: column; align-items: start">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Member.human_attribute_name(:id) %></th>
      <th><%= Member.human_attribute_name(:type) %></th>
      <th><%= Member.human_attribute_name(:name) %></th>
      <th><%= Member.human_attribute_name(:office) %></th>
      <th><%= Member.human_attribute_name(:department) %></th>
      <th><%= Member.human_attribute_name(:contacts) %></th>
      <th><%= Member.human_attribute_name(:join_on) %></th>
      <th><%= Member.human_attribute_name(:resume) %></th>
      <th>
        <%= link_to new_panel_member_path, remote: true, class: 'ui mini primary button' do %>
          <i class="plus icon"></i><%= t('.new') %>
        <% end %>
        <%= link_to find_data_list_table_lists_path('MemberExport', params.fetch(:q, {}).permit(:office_id)), class: 'ui mini secondary button', remote: true do %>
          <i class="file excel icon"></i><%= t('.export') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <%= render partial: 'member', locals: { member: member } %>
    <% end %>
  </tbody>
</table>

<%= paginate @members %>
