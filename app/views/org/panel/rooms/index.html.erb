<% content_for :breadcrumb do %>
<div class="ui basic segment breadcrumb">
  <%= link_to 'Back', panel_offices_path, class: 'section' %>
  <div class="divider">/</div>
  <div class="active section">Rooms</div>
</div>
<% end %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Room.human_attribute_name(:id) %></th>
      <th><%= Room.human_attribute_name(:room_number) %></th>
      <th><%= Room.human_attribute_name(:time_plans_count) %></th>
      <th>
        <%= link_to new_panel_office_room_path(@office), class: 'ui mini primary button', remote: true do %>
          <i class="plus icon"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.id %></td>
      <td><%= room.room_number %></td>
      <td><%= room.time_plans_count %></td>
      <td>
        <%= link_to edit_panel_office_room_path(@office, room), data: { tooltip: t('.edit') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to panel_office_room_path(@office, room), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui mini circular icon button' do %>
          <i class="trash laternate icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @rooms %>
