<% content_for :breadcrumb do %>
<div class="ui basic segment breadcrumb">
  <%= link_to t('org.panel.offices.index.title'), panel_offices_path, class: 'section' %>
  <i class="fas fa-angle-right divider"></i>
  <div class="section"><%= @office.name %></div>
  <i class="fas fa-angle-right divider"></i>
  <div class="active section"><%= t('org.panel.rooms.index.title') %></div>
</div>
<% end %>

<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= Room.human_attribute_name(:id) %></th>
      <th><%= Room.human_attribute_name(:room_number) %></th>
      <th><%= Room.human_attribute_name(:color) %></th>
      <th><%= Room.human_attribute_name(:limit_number) %></th>
      <th><%= Room.human_attribute_name(:time_plans_count) %></th>
      <th>
        <%= link_to new_panel_office_room_path(@office), class: 'ui mini primary button', remote: true do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.id %></td>
      <td><%= room.room_number %></td>
      <td>
        <span class="ui label" style="background-color: <%= room.color %>;"><%= room.color %></span>
      </td>
      <td><%= room.limit_number %></td>
      <td><%= room.time_plans_count %></td>
      <td>
        <%= link_to edit_panel_office_room_path(@office, room), data: { tooltip: t('.edit') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to panel_office_room_path(@office, room), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @rooms %>
