<%= render 'menu' %>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Needed / Actual</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @departments.each do |department| %>
    <%= render partial: 'department', locals: { node: department } %>
    <%= draw_tree(department, partial: 'org/admin/departments/department') %>
  <% end %>
  </tbody>
</table>

<%= paginate @departments %>
