<div class="ui top attached segment">
  <%= search_form_with model: JobTitle.new(params.permit(:name, :department_id, :office_id)) do |f| %>
    <div class="fields">
      <%= f.hidden_field :department_id %>
      <%= f.hidden_field :office_id %>
      <%= f.text_field :name %>
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:name]), class: 'ui button' %>
    </div>
  <% end %>
</div>

