<% content_for :breadcrumb do %>

<% end %>

<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= OrganGrant.human_attribute_name(:id) %></th>
      <th><%= OrganGrant.human_attribute_name(:user) %></th>
      <th><%= OrganGrant.human_attribute_name(:member) %></th>
      <th><%= OrganGrant.human_attribute_name(:token) %></th>
      <th><%= OrganGrant.human_attribute_name(:expire_at) %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @organ_grants.each do |organ_grant| %>
    <tr>
      <td><%= organ_grant.id %></td>
      <td><%= link_to organ_grant.user.name, admin_user_path(organ_grant.user_id) if organ_grant.user %></td>
      <td>
        <%= link_to organ_grant.member.name, admin_member_path(organ_grant.member_id) if organ_grant.member %>
      </td>
      <td><%= organ_grant.token %></td>
      <td>
        <time><%= organ_grant.expire_at.to_s(:rfc822) %></time>
      </td>
      <td>
        <div class="ui labels">
          <% organ_grant.roles.pluck(:name).each do |role| %>
            <span class="ui label"><%= role %></span>
          <% end %>
        </div>
        <%= link_to edit_who_roles_path('OrganGrant', organ_grant.id), data: { tooltip: t('role.admin.who_roles.edit.title') }, remote: true do %>
          <i class="fas fa-user-shield"></i>
        <% end %>
      </td>
      <td>
        <%= link_to admin_member_organ_grant_path(@member, organ_grant), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui red mini icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @organ_grants %>
