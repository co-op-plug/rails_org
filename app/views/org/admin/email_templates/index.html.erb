<div class="ui top attached borderless menu">
  <div class="header item">Email Templates</div>
  <div class="right menu">
    <div class="item"><%= link_to 'New Email Template', new_admin_email_template_path, class: 'ui teal button' %></div>
  </div>
</div>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th class="one wide"><%= EmailTemplate.human_attribute_name(:id) %></th>
      <th class="one wide"><%= EmailTemplate.human_attribute_name(:name) %></th>
      <th class="one wide"><%= EmailTemplate.human_attribute_name(:category) %></th>
      <th class="one wide"><%= EmailTemplate.human_attribute_name(:subject) %></th>
      <th class="three wide"><%= EmailTemplate.human_attribute_name(:body) %></th>
      <th class="two wide"><%= EmailTemplate.human_attribute_name(:file) %></th>
      <th class="one wide"><%= EmailTemplate.human_attribute_name(:created_at) %></th>
      <th class="one wide"><%= EmailTemplate.human_attribute_name(:updated_at) %></th>
      <th class="two wide"></th>
    </tr>
  </thead>

  <tbody>
  <% @email_templates.each do |email_template| %>
    <tr>
      <td><%= email_template.id %></td>
      <td><%= email_template.name %></td>
      <td><%= email_template.category %></td>
      <td><%= email_template.subject %></td>
      <td><%= email_template.body %></td>
      <td>
        <%= link_to email_template.file.filename, rails_blob_path(email_template.file), target: '_blank' if email_template.file.attached? %>
        <%= 'No File' unless email_template.file.attached? %>
      </td>
      <td><%= email_template.created_at %></td>
      <td><%= email_template.updated_at %></td>
      <td>
        <%= link_to t('.edit'), edit_admin_email_template_path(email_template), class: 'ui pink label' %>
        <%= link_to t('.destroy'), admin_email_template_path(email_template), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui red label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @email_templates %>
