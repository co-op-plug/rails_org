<dl>
  <dt>State:</dt>
  <dd>
    <%= link_to 'All', filter_params(except: [:state]), class: active_params(state: '', active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% JobTransfer.states.keys.each do |state| %>
      <%= link_to JobTransfer.enum_i18n(:state, state), filter_params(state: state), class: active_params(state: state, active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% end %>
  </dd>
</dl>


