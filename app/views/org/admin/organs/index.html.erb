
<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Organ.human_attribute_name(:id) %></th>
      <th><%= Organ.human_attribute_name(:logo) %></th>
      <th><%= Organ.human_attribute_name(:name) %></th>
      <th><%= Organ.human_attribute_name(:organ_uuid) %></th>
      <th>
        <%= link_to 'New Org Admin Organ', new_admin_organ_path, class: 'ui teal button', remote: true %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @organs.each do |organ| %>
    <tr>
      <td><%= organ.id %></td>
      <td><%= image_tag organ.logo.variant(resize: '30x30') if organ.logo.attached? %></td>
      <td><%= organ.name %></td>
      <td><%= organ.organ_uuid %></td>
      <td class="ui labels">
        <%= link_to admin_organ_path(organ), data: { tooltip: t('.show') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_organ_path(organ), data: { tooltip: t('.edit') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_organ_path(organ), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui mini circular icon button' do %>
          <i class="trash alternate icon"></i>
        <% end %>
        <%= link_to mock_admin_organ_path(organ), method: :patch, data: { tooltip: 'Mock' }, class: 'ui mini circular icon button' do %>
          <i class="hand point right icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @organs %>
