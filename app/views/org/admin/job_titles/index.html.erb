<div class="ui top attached borderless menu">
  <div class="header item">Job Titles</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Job Title', new_admin_job_title_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= JobTitle.human_attribute_name(:id) %></th>
      <th><%= JobTitle.human_attribute_name(:name) %></th>
      <th><%= JobTitle.human_attribute_name(:grade) %></th>
      <th><%= JobTitle.human_attribute_name(:created_at) %></th>
      <th><%= JobTitle.human_attribute_name(:updated_at) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @job_titles.each do |job_title| %>
    <tr>
      <td><%= job_title.id %></td>
      <td><%= job_title.name %></td>
      <td><%= job_title.grade %></td>
      <td><%= job_title.created_at %></td>
      <td><%= job_title.updated_at %></td>
      <td class="ui labels">
        <%= link_to t('.edit'), edit_admin_job_title_path(job_title), class: 'ui pink label'%>
        <%= link_to t('.destroy'), admin_job_title_path(job_title), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui red label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @job_titles %>
