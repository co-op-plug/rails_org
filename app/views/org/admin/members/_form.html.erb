<%= f.text_field :name %>
<%= f.fields :member_departments do |ef| %>
  <% if params[:department_id] %>
    <%= ef.hidden_field :department_id, value: params[:department_id] %>
  <% else %>
    <%= render partial: 'nodes/outer_select', locals: { f: ef, outer: 'department' } %>
  <% end %>
  <%= ef.collection_select :job_title_id, @job_titles, :id, :name, { on: { wrapper_input_id: true } }, { data: { title: 'job_title_id' } } %>
<% end %>
<%= f.text_field :identity %>
<%= f.date_field :join_on %>
<%= f.file_field :resume %>
<%= f.file_field :avatar %>
<%= f.check_box :enabled %>
<%= f.submit %>
