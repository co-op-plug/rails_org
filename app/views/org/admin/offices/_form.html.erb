<%= form_with model: [:admin, @office], local: true do |f| %>
  <%= render 'shared/error_messages', target: @office %>
  <%= f.text_field :name, required: true %>
  <%= f.text_field :name_short %>
  <%= f.text_area :address %>
  <%= f.time_zone_select :timezone %>
  <%= f.select :locale, options_for_select(I18n.available_locales.zip(I18n.available_locales), @office.locale) %>
  <%= f.submit %>
<% end %>
