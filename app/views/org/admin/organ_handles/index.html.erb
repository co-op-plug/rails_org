<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= OrganHandle.human_attribute_name(:id) %></th>
      <th><%= OrganHandle.human_attribute_name(:name) %></th>
      <th><%= OrganHandle.human_attribute_name(:description) %></th>
      <th><%= OrganHandle.human_attribute_name(:record_class) %></th>
      <th><%= OrganHandle.human_attribute_name(:record_column) %></th>
      <th>
        <%= link_to new_admin_organ_handle_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @organ_handles.each do |organ_handle| %>
    <tr>
      <td><%= organ_handle.id %></td>
      <td><%= organ_handle.name %></td>
      <td><%= organ_handle.description %></td>
      <td><%= organ_handle.record_class %></td>
      <td><%= organ_handle.record_column %></td>
      <td>
        <%= link_to admin_organ_handle_path(organ_handle), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_organ_handle_path(organ_handle), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_organ_handle_path(organ_handle), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @organ_handles %>
