<% if current_user.any_role?('org/admin/departments', 'org/admin/offices') %>
<div class="item">
  <a class="<%= active_helper(controllers: ['offices', 'departments', 'job_descriptions', 'supports'], active_class: 'title active', item_class: 'title') %>">
    <i class="users icon"></i>
    <span>Departments</span>
  </a>
  <div class="<%= active_helper(controllers: ['offices', 'departments', 'job_descriptions', 'supports'], active_class: 'active menu content', item_class: 'menu content') %>">
    <%= link_to 'Departments', admin_departments_path, class: active_helper(controllers: ['departments', 'job_descriptions']) %>
    <%= link_to 'Offices', admin_offices_path, class: active_helper(controllers: 'offices') %>
    <%= link_to 'Supports', admin_supports_path, class: active_helper(controllers: 'supports') %>
  </div>
</div>
<% end %>

