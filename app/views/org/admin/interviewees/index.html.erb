<div class="ui top attached borderless menu">
  <div class="header item">Interviewees</div>
  <div class="right menu">
    <div class="item"><%= link_to 'New', new_admin_interviewee_path, class: 'ui teal button' %></div>
  </div>
</div>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Interviewee.human_attribute_name(:id) %></th>
      <th><%= Interviewee.human_attribute_name(:name) %></th>
      <th><%= Member.human_attribute_name(:office) %></th>
      <th><%= Member.human_attribute_name(:department) %></th>
      <th><%= Interviewee.human_attribute_name(:state) %></th>
      <th><%= Interviewee.human_attribute_name(:position) %></th>
      <th><%= Interviewee.human_attribute_name(:private_email) %></th>
      <th>Interview Time</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @interviewees.each do |interviewee| %>
    <tr>
      <td><%= interviewee.id %></td>
      <td><%= interviewee.name %></td>
      <td><%= interviewee.office&.name %></td>
      <td><%= interviewee.department&.full_name %></td>
      <td><%= interviewee.state %></td>
      <td><%= interviewee.position %></td>
      <td><%= interviewee.private_email %></td>
      <td><time><%= interviewee.interview_time.to_s(:rfc822) if interviewee.interview_time %></time></td>
      <td class="ui labels">
        <%= link_to 'Show', admin_interviewee_path(interviewee), class: 'ui blue label' %>
        <%= link_to 'Edit', edit_admin_interviewee_path(interviewee), class: 'ui pink label' %>
        <%= link_to 'Delete', admin_interviewee_path(interviewee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui red label' %>
        <%= link_to 'Send Email', email_admin_interviewee_path(interviewee), class: 'ui green label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @interviewees %>
